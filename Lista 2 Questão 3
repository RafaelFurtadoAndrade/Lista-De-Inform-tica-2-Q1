#include <iostream>
#include <iomanip> // Biblioteca para manipulação de formato de saída
using namespace std;

int main() {
    // Definição do raio
    double r, z_diametro, z_area;

    // Solicitação para o usuário digitar o valor do raio
    cout << "Digite o valor do raio: ";
    cin >> r;

    // Cálculo das expressões
    z_diametro = 2 * r; // O diâmetro é duas vezes o raio
    z_area = 3.14159 * r * r; // Área do círculo é π * raio^2

    // Saída dos resultados com precisão decimal
    cout << fixed << setprecision(2); // Define a precisão decimal para 2 casas decimais
    cout << "O diâmetro é: " << z_diametro << endl;
    cout << "A área é: " << z_area << endl;

    return 0;
}
